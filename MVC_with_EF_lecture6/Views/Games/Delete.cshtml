@model SPA.Models.Game

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-light">Delete</h1>

<h3 class="text-light">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-light">Game</h4>
    <hr />
    <dl class="row text-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameToken)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameToken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <input type="hidden" asp-for="GameId" />
    <input type="button" href="#myModal" value="Delete" class="btn btn-dark" style="color:#01ff80" data-toggle="modal"/>
    <a asp-action="Index">Go back</a>
</div>
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this game? This action cannot be undone and you will be unable to recover any data.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="GameId" />
                    <input type="submit" value="Yes, delete it!" class="btn btn-danger"/>
                </form>
            </div>
        </div>
    </div>
</div>                                                