@model SPA.Models.Player

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Edit</h1>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlayerId" />
            <div class="form-group">
                <label asp-for="PlayerEmail" class="control-label"></label>
                <input asp-for="PlayerEmail" class="form-control" />
                <span asp-validation-for="PlayerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerRole" class="control-label"></label>
                <input asp-for="PlayerRole" class="form-control" />
                <span asp-validation-for="PlayerRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerToken" class="control-label"></label>
                <input asp-for="PlayerToken" class="form-control" />
                <span asp-validation-for="PlayerToken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerProviderKey" class="control-label"></label>
                <input asp-for="PlayerProviderKey" class="form-control" readonly/>
                <span asp-validation-for="PlayerProviderKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" style="color:#01ff80"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
